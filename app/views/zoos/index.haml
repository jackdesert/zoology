%p{id: 'notice'}= notice

%h1 Zoos

%table
  %thead
    %tr
      %th Name
      %th{colspan: 3}

  %tbody
    - @zoos.each do |zoo|
      %tr
        %td= zoo.name
        %td= link_to 'Show', zoo
        %td= link_to 'Edit', edit_zoo_path(zoo)
        %td= link_to 'Destroy', zoo, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Zoo', new_zoo_path
