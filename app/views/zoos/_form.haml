= form_for(@zoo) do |f|
  - if @zoo.errors.any?
    #error_explanation
      %h2
        = pluralize(@zoo.errors.count, "error")
        prohibited this zoo from being saved:
      %ul
        - @zoo.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    %br
    = f.text_field :name

  .actions
    - value = @zoo.persisted? ? 'Rename' : 'Save'
    = f.submit(value: value)
