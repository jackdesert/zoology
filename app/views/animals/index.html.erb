<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Zoo</th>
      <th>Species</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.zoo_id %></td>
        <td><%= animal.species %></td>
        <td><%= link_to 'Show', zoo_animal_path(animal, zoo_id: @zoo.id) %></td>
        <td><%= link_to 'Edit', edit_zoo_animal_path(animal, zoo_id: @zoo.id) %></td>
        <td><%= link_to 'Destroy', zoo_animal_path(animal, zoo_id: 1), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

